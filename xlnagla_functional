#pragma once

#include <tuple>

namespace xlnagla{

//the base case is the first argument.
	template<typename T>
		T cond(bool acond, const T& res, const T& basecase){
		return acond ? res : basecase;
	}
	
	template<typename T, typename... L>
		T cond(bool acond, const T& res, const L&... l){
		return acond ? res : cond(l...);
	}

	

}
