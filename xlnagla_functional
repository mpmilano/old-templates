#pragma once

#include <tuple>

namespace xlnagla{

//the base case is the first argument.
	template<typename T>
		T cond(const T& basecase, bool acond, const T& res){
		return acond ? res : basecase;
	}
	
	template<typename T, typename... L>
		T cond(const T& basecase, bool acond, const T& res, const L&... l){
		return acond ? res : cond(basecase, l...);
	}

	

}
